@model InvoiceManagementSystem.Models.EmailConfigurationSetting
@{
    ViewBag.Title = "EmailConfiguration";
}
<br />
<br />
<style>
    .scrollable-container {
        max-height: 700px;
        overflow-y: auto;
        overflow-x: hidden; /* Optional: to hide horizontal scrollbar if not needed */
        scrollbar-width: thin; /* Makes the scrollbar thin */
        scrollbar-color: #888 #f1f1f1; /* Color of the scrollbar thumb and track */
    }
</style>

<div class="main-content position-relative max-height-vh-100 h-100" style="margin-top:-220px">

    <div class="card shadow-lg mx-4 card-profile-bottom">
        <div class="card-body p-3">
            <div class="row gx-4">
                <div class="col-auto my-auto">
                    <div class="h-100">
                        <h5 class="mb-1">
                            <i class="fas fa-envelope text-danger text-lg"></i>&nbsp;&nbsp;Manage Email-Configuration
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="card shadow-lg mx-4 card-profile" id="Filter" style="display:none" >
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-2 p-1">
                    <label style="color:black">Search</label>
                    <input class="form-control form-control-alternative" type="text" id="SearchText" placeholder="Search by username">
                </div>
                @*<div class="col-md-2 p-1">
                    <label style="color:black">Status</label>
                    <select tabindex="1" data-placeholder="Select here.." id="intActive" name="intActive" class="form-control form-control-alternative">
                        <option value="3">Select Status</option>
                        <option value="1">Active</option>
                        <option value="2">In-Active</option>
                    </select>
                </div>*@
                <div class="col-auto float-right ml-auto mt-4" style="float:right">
                    <button type="button" id="btnSearch" class="btn bg-gradient-info " data-bs-toggle="tooltip" data-bs-placement="top" data-container="body" data-animation="true" onclick="GetEmailConfigurationList(1)">Search</button>
                    <button type="button" class="btn bg-gradient-dark" title="Clear" onclick="ClearData(2)"> Clear</button>
                </div>
            </div>

        </div>
    </div>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="dataTables_length" id="DataTables_Table_0_length">
                    <label style="color:white">
                        Show
                        <select id="PageSize" onchange="GetEmailConfigurationList(1)" class="drpselect">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        entries
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card mb-1">
                    <div class="card-header pb-0">
                        <h6><i class="fas fa-envelope text-danger text-lg"></i>  Email-Configuration List</h6>
                        
                        <div class="col-auto float-right ml-auto" style="float:right">
                            <a href="~/EmailConfiguration/EmailConfiguration" class="btn bg-gradient-info" onclick="Clear()" style="color:white; cursor:pointer;">+ Add New</a>
                            <a href="#" class="btn bg-gradient-dark" onclick="ShowFilter()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Filter"><i class="fa fa-filter"></i></a>
                            <a href="#" class="btn bg-gradient-dark" onclick="ExportEmailConfiguration()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Export to Excel"><i class="fa fa-file-excel-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <div id="tblBody"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="delete_EmailConfiguration" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="margin-left:92px"><span id="PopupTitle">Delete Email-Configuration</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-secondary text-xs font-weight-bolder opacity-100" style="margin-left:120px;">Are you sure want to delete this Email-Configuration ?.</p>
                </div>
                <div class="modal-footer" style="padding-right: 166px">
                    <button type="button" id="btnAdd" class="btn bg-gradient-danger" onclick="deleteEmailConfiguration()">Delete</button>
                    <button type="button" class="btn bg-gradient-dark" data-bs-dismiss="modal">Cancel</button>
                    <input type="hidden" id="hdnintId" value="0" />
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/School/EmailConfiguration.js"></script>
