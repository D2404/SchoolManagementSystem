
@{ ViewBag.Title = "Fees Collection"; }
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />



<div class="row" id="FilterDiv" style="margin-left:19px">
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus">
            <select data-placeholder="Select here.." id="ddlClassId" onchange="onddlClass();" class="select2-single-placeholder form-control" style="width: 100%"></select>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="form-group form-focus">
            <select data-placeholder="Select here.." id="ddlStudentId" class="select2-single-placeholder form-control" style="width: 100%"></select>
        </div>
    </div>
    <div class="col-sm-6 col-md-1">

        <a class="btn bg-gradient-info" onclick="GetFeesList(1)">Search</a>
    </div>
    <div class="col-sm-6 col-md-1">
        <a class="btn bg-gradient-dark" title="Clear" onclick="ClearData(2)"> Clear </a>

    </div>
</div>
<div class="main-content position-relative max-height-vh-100 h-100" style="margin-top:-220px">
    <div class="card shadow-lg mx-4 card-profile-bottom">
        <div class="card-body p-3">
            <div class="row gx-4">
                <div class="col-auto my-auto">
                    <div class="h-100">
                        <h5 class="mb-1">
                            <i class="fa fa-inr text-info text-lg opacity-10"></i>&nbsp;&nbsp;Manage Fees Collection
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="dataTables_length" id="DataTables_Table_0_length">
                    <label style="color:white">
                        Show
                        <select id="PageSize" onchange="GetFeesList(1)" class="drpselect">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select> entries
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6><i class="fa fa-inr text-info text-lg opacity-10"></i>&nbsp;&nbsp;&nbsp;Fees Collection List</h6>
                        
                        <div class="col-auto float-right ml-auto" style="float:right">
                            <a class="btn bg-gradient-info" data-bs-toggle="modal" data-bs-target="#Fees" onclick="Clear()" style="color:white; cursor:pointer;">+ Add New</a>
                            <a href="#" class="btn bg-gradient-dark" onclick="ShowFilter()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Filter"><i class="fa fa-filter"></i></a>
                            <a href="#" class="btn bg-gradient-dark" onclick="ExportFees()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Export to Excel"><i class="fa fa-file-excel-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <div id="tblBody"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="Fees" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="PopupTitle">Add Fees</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="basicinput"><b>Class Room</b></label>
                                <select class="form-control" id="ClassId" onchange="onClass();">
                                    <option value="0">Select here..</option>
                                </select>
                                <span id="errClassNo" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="basicinput"><b>Student</b></label>
                                <select class="form-control js-example-basic-single" id="StudentId" onchange="onStudent();">
                                    <option value="0">Select here..</option>
                                </select>
                                <span id="errStudent" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Roll No </label><br />
                                <span class="form-control" id="RollNo" name="RollNo"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Date</label>
                                <input class="form-control floating datetimepicker" type="Date" id="Date" autocomplete="off">
                                @*<input class="form-control datetimepicker" type="date" id="Dob" placeholder="Enter Dob">*@
                                <span id="errDate" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="basicinput"><b>Month</b></label>
                                <select class="form-control" id="MonthId">
                                    <option value="0">Select here..</option>
                                </select>
                                <span id="errMonth" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="basicinput"><b>Year</b></label>
                                <select class="form-control" id="YearId">
                                    <option value="0" selected="">Select Year</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                </select>
                                <span id="errYear" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">FeesAmount <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="FeesAmount" placeholder="Enter Fees Amount">
                                <span id="errFeesAmount" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                        <hr />
                        <h6 style="color:green">For your Information </h6>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Monthly Fees</label>
                                <span class="form-control" id="Monthly"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Yearly Fees</label>
                                <span contenteditable="false" class="form-control" id="Yearly"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div>
                        <button type="button" id="btnAdd1" class="btn bg-gradient-success" onclick="InsertandPayData()">Save & Pay</button>
                        <button type="button" id="btnAdd" class="btn bg-gradient-info" onclick="InsertData()">Save</button>
                        <button type="button" class="btn bg-gradient-dark" onclick="ClearData(1)">Clear</button>
                        <input type="hidden" id="hdnintId" value="0" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="delete_Fees" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" ><span id="PopupTitle">Delete Fees</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-secondary text-xs font-weight-bolder opacity-100">Are you sure want to delete this Fees ?.</p>
                </div>

                <div class="modal-footer">

                    <button type="button" id="btnAdd" class="btn bg-gradient-danger" onclick="deleteFees()">Delete</button>
                    <button type="button" class="btn bg-gradient-dark" data-bs-dismiss="modal">Cancel</button>
                    <input type="hidden" id="hdnintId" value="0" />
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/School/FeesCollection.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
