@model InvoiceManagementSystem.Models.FeesModel
@{ int no = 0; }
<table class="table align-items-center mb-0">
    <thead>
        <tr>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Sr No.</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Class No</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Student</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Roll No</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Payment Date</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Total Pay</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Total Pending</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Total Fees</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="text-align:center">Status</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
        </tr>
    </thead>
    @if (Model != null && Model.LSTFeesList.Count > 0)
    {
        <tbody id="tblBody">
            @for (var i = 0; i < Model.LSTFeesList.Count; i++)
            {
                var item = Model.LSTFeesList[i];
                no = no + 1;
                string SrNo = (no >= 1 && no <= 9) ? $"0{no}" : no.ToString();
                <tr>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center"><b>@SrNo</b></p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.ClassNo</p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.StudentName</p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.RollNo</p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.Date</p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.TotalPay<span>.00</span></p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.TotalPending<span>.00</span></p>
                    </td>
                    <td>
                        <p class="text-xs font-weight-bold mb-0" style="text-align:center">@item.Yearly<span>.00</span></p>
                    </td>
                    <td>
                        @if (item.Status == 0)
                        {
                            <span class="text-xs font-weight-bold mb-0" style="text-align:center"><i class="fa fa-clock-o text-danger"></i> <b style="color:red">Pending</b> </span>}
                        else if (item.Status == 1)
                        {
                            <span class="text-xs font-weight-bold mb-0" style="text-align:center"><i class="fa fa-check text-success"></i> <b style="color:forestgreen">Success</b></span> } @*else if (item.Status == 3)
                            {
                            <span class="text-xs font-weight-bold mb-0"><i class="fa fa-check text-success"></i> <b style="color: forestgreen">Success</b></span>
                            }*@
                            else if (item.Status == 3)
                            {
                                <span class="text-xs font-weight-bold mb-0" style="text-align:center"><i class="fa fa-check text-danger"></i> <b style="color: red">Current Month Pending</b></span>
                            }
                            else if (item.Status == 4)
                            {
                                <span class="text-xs font-weight-bold mb-0" style="text-align:center"><i class="fa fa-check text-danger"></i> <b style="color: red">Previous Month Pending</b></span>
                            }
                            else
                            {
                                <span class="text-xs font-weight-bold mb-0" style="text-align:center"><i class="fa fa-smile-o text-info"></i> <b style="color:dodgerblue">Yearly Done</b> </span>}
                    </td>
                    <td class="align-middle text-center" style="text-align:center">
                        <div class="dropdown">
                            <a href="javascript:;" class="nav-link text-white font-weight-bold px-0">
                                <i class="fa fa-ellipsis-v me-sm-1 text-black-50" style="font-size:13px" aria-hidden="true"></i>
                            </a>
                            <div class="dropdown-content" style="top: 6px; right: 8px;width:100px">
                                <a href="~/Fees/FeesHistory?studentid=@item.StudentId" title="View History" style="cursor: pointer; font-size: 14px; padding-top: 1px;padding-right: 25px "><i class="fa fa-history cursor-pointer">&nbsp;&nbsp;History</i></a>
                                <a href="~/Fees/FeesInvoice?studentid=@item.StudentId" title="View History" style="cursor: pointer; font-size: 14px; padding-top: 1px;padding-right: 25px "><i class="fa fa-file-invoice">&nbsp;&nbsp;Generate Invoice</i></a>
                                <a href="javascript:;" title="Edit Fees" style="cursor: pointer; font-size: 14px; padding-top: 1px;padding-right: 25px " data-bs-toggle="modal" data-bs-target="#Fees" onclick="GetSingleFeesData(@item.Id)"><i class="fa fa-pen cursor-pointer">&nbsp;&nbsp;Edit</i></a>
                                <a href="javascript:;" style="font-size: 14px;padding-top:1px;padding-right:25px" data-bs-toggle="modal" data-bs-target="#delete_Fees" onclick="opendeleteModel(@item.Id);">&nbsp;&nbsp;<i class="fa fa-trash">&nbsp;&nbsp;Delete</i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    }
    else
    {
        <tr>
            <td colspan="10">
                <p class="text-xs font-weight-bold mb-0" style="text-align: center;"><b>No Record Found</b></p>
            </td>
        </tr>
    }
</table>


<div class="quotation-body">
    <div class="row">
        <div class="col-lg-6 paddinglr8px">
        </div>
    </div>
    <div class="col-lg-12" style="bottom: 13px;">
        <div class="dataTables_paginate paging_simple_numbers" id="datatable-default_paginate">
            @if (Model != null && Model.LSTFeesList != null && Model.LSTFeesList.Count > 0)
            {
                var start = (Model.LSTFeesList[0].PageIndex - 1) * Model.LSTFeesList[0].PageSize + 1;
                var end = Model.LSTFeesList[0].PageSize;
                if (Model.LSTFeesList[0].PageSize < Model.LSTFeesList[0].TotalRecord)
                {
                    end = Model.LSTFeesList[0].PageSize * Model.LSTFeesList[0].PageIndex;
                    if (end > Model.LSTFeesList[0].TotalRecord)
                    {
                        end = Model.LSTFeesList[0].TotalRecord;
                    }
                }
                else
                {
                    end = Model.LSTFeesList[0].TotalRecord;
                }
                <span id="spnTotalRecords" class="dataTables_info" Department="status" aria-live="polite" style="padding: 52px 27px 10px 18px; float: left; color: black;font-size:13px">Showing @start to @end of @Model.LSTFeesList[0].TotalRecord  entries</span>}
            <div id="divPagination">
                @if (Model.LSTFeesList != null && Model.LSTFeesList.Count > 0)
                {
                    var pager = Model.Pager;
                    if (pager != null)
                    {
                        if (pager.EndPage >= 1)
                        {
                            <ol class="pagination" style="float:right;margin-top:-15px;margin-bottom:-5px;">
                                @if (pager.CurrentPage > 1)
                                {
                                    <li class="paginate_button previous page-item">
                                        <a onclick="GetFeesList(@pager.CurrentPage-1)" class="page-link" style=" cursor: pointer; font-size: 11px; margin-top: 40px;"><i class="fas fa-angle-left"></i></a>&nbsp;
                                    </li>
                                }
                                @for (var page1 = pager.StartPage; page1 <= pager.EndPage; page1++)
                                {
                                    if (@page1 == @pager.CurrentPage)
                                    {
                                        <li class="paginate_button page-item active">
                                            <a onclick="GetFeesList(@page1)" style=" cursor: pointer; font-size: 11px; margin-top: 40px;" aria-controls="datatable-default" data-dt-idx="2" tabindex="0" class="page-link bg-gradient-info"><span style="color:white">@page1</span></a>&nbsp;
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button page-item">
                                            <a onclick="GetFeesList(@page1)" style=" cursor: pointer; font-size: 11px; margin-top: 40px;" class="page-link">@page1</a>&nbsp;
                                        </li>
                                    }
                                }
                                @if (pager.CurrentPage < pager.TotalPages)
                                {
                                    <li class="paginate_button page-item">
                                        <a onclick="GetFeesList(@pager.CurrentPage + 1)" style=" cursor: pointer; font-size: 11px; margin-top: 40px; float: left" class="page-link"><i class="fas fa-angle-right"></i></a>
                                    </li>
                                }
                            </ol>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>