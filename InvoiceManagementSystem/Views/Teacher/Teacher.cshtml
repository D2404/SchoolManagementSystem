                                                    <option value="AB+" @(Model.BloodGroup == "AB+" ? "selected" : "")>AB+</option>
                                                    <option value="AB-" @(Model.BloodGroup == "AB-" ? "selected" : "")>AB-</option>
                                                    <option value="O+" @(Model.BloodGroup == "O+" ? "selected" : "")>O+</option>
                                                    <option value="O-" @(Model.BloodGroup == "O-" ? "selected" : "")>O-</option>
                                                </select>
                                            }
                                            else
                                            {
                                                <select name="BloodGroup" id="BloodGroup" class="form-control form-control-alternative">
                                                    <option value="0">Select BloodGroup</option>
                                                    <option value="A+">A+</option>
                                                    <option value="A-">A-</option>
                                                    <option value="B+">B+</option>
                                                    <option value="B-">B-</option>
                                                    <option value="AB+">AB+</option>
                                                    <option value="AB-">AB-</option>
                                                    <option value="O+">O+</option>
                                                    <option value="O-">O-</option>
                                                </select>
