                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Blood Group <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                <select name="BloodGroup" id="BloodGroup" class="form-control form-control-alternative">
                                                    <option value="0">Select BloodGroup</option>
                                                    <option value="A+" @(Model.BloodGroup == "A+" ? "selected" : "")>A+</option>
                                                    <option value="A-" @(Model.BloodGroup == "A-" ? "selected" : "")>A-</option>
