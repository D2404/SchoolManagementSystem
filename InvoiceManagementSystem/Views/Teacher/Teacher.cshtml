                                            <span id="errMobile" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Alternate Mobile <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.TextBoxFor(model => model.LSTTeacherList[0].AlternateMobileNo, new { @id = "AlternateMobileNo", @placeholder = "8487968118", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.AlternateMobileNo, new { @id = "AlternateMobileNo", @placeholder = "8487968118", @class = "form-control form-control-alternative" })
                                            }
                                            @*<input class="form-control form-control-alternative" type="text" id="MobileNo" placeholder="Enter Mobile" onkeypress="return isNumber(event);">*@
                                            <span id="errAlternateMobileNo" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Date Of Joining <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.TextBoxFor(model => model.LSTTeacherList[0].DateOfJoining, new { @id = "DateOfJoining", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.DateOfJoining, new { @id = "DateOfJoining", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            @*<input class="form-control form-control-alternative floating datetimepicker" type="date" id="Dob" autocomplete="off">*@
                                            <span id="errDateOfJoining" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Date Of Leaving <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.TextBoxFor(model => model.LSTTeacherList[0].DateOfLeaving, new { @id = "DateOfLeaving", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.DateOfLeaving, new { @id = "DateOfLeaving", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            @*<input class="form-control form-control-alternative floating datetimepicker" type="date" id="Dob" autocomplete="off">*@
                                            <span id="errDateOfLeaving" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="basicinput"><b>Assign Class</b><span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.DropDownListFor(model => model.LSTTeacherList[0].ClassId,
                                                 new SelectList(Model.LSTTeacherList, "ClassId", "ClassNo"),
                                                 "Select ClassRoom",
                                                 new { @class = "form-control form-control-alternative", style = "width: 100%", @id = "ClassId" })
                                            }
                                            else
                                            {
                                                <select class="form-control form-control-alternative" id="ClassId" name="ClassId" style="width: 100%">
                                                    <option value="0">Select ClassRoom</option>
                                                    @{ if (Model != null && Model.LSTTeacherList.Count > 0)
                                                        {
                                                            for (var i = 0; i < Model.LSTTeacherList.Count; i++)
                                                            {
                                                                var item = Model.LSTTeacherList[i];

                                                                if (item.Id == Model.ClassId)
                                                                {
                                                                    <option value="@item.Id" selected>@(item.ClassNo + " (" + item.ClassNo + ")")</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.Id">@(item.ClassNo + " (" + item.ClassNo + ")")</option>
                                                                }
                                                            }
                                                        } }
                                                </select>
                                            }
                                            <span id="errClassId" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Qualification <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.TextBoxFor(model => model.LSTTeacherList[0].Education, new { @id = "Education", @placeholder = "Education.", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.Education, new { @id = "Education", @placeholder = "Education.", @class = "form-control form-control-alternative" })
                                            }
                                            <span id="errEducation" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Marital Status<span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                <select name="MaritalStatus" id="MaritalStatus" class="form-control form-control-alternative">
                                                    <option value="0">Select Status</option>
                                                    <option value="Single" @(Model.Title == "Single" ? "selected" : "")>Single</option>
                                                    <option value="Engaged" @(Model.Title == "Engaged" ? "selected" : "")>Engaged</option>
                                                    <option value="Married" @(Model.Title == "Married" ? "selected" : "")>Married</option>
