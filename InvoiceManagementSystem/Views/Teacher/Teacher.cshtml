                                            }
                                            else
                                            {
                                                <select name="MaritalStatus" id="MaritalStatus" class="form-control form-control-alternative">
                                                    <option value="0">Select Status</option>
                                                    <option value="Single">Single</option>
                                                    <option value="Engaged">Engaged</option>
                                                    <option value="Married">Married</option>
                                                </select>
                                            }
                                            <span id="errMaritalStatus" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Annivarsary Date <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.TextBoxFor(model => model.LSTTeacherList[0].AnniversaryDate, new { @id = "AnniversaryDate", @placeholder = "dd/mm/yyyy", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.AnniversaryDate, new { @id = "AnniversaryDate", @placeholder = "dd/mm/yyyy", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Work Experience <span class="text-danger">*</span></label>
                                            @if (Model.Id > 0)
                                            {
                                                @Html.TextBoxFor(model => model.LSTTeacherList[0].Experience, new { @id = "Experience", @placeholder = "Experience", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.Experience, new { @id = "Experience", @placeholder = "Experience", @class = "form-control form-control-alternative" })
                                            }
                                            <span id="errExperience" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="footer" style="text-align:right">
                                        <button class="btn bg-gradient-info btn-sm ms-auto" onclick="javascript: return InsertBasicDetails();">Save</button>
                                        <button type="button" class="btn bg-gradient-dark btn-sm ms-auto" onclick="ClearData(1)">Clear</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

