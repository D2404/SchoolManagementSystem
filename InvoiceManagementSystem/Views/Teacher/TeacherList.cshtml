@model InvoiceManagementSystem.Models.TeacherModel
@{
    ViewBag.Title = "Teacher";
}
<br />
<br />
<head>
    <link href="imagecard.css" rel="stylesheet" />
</head>
<style>
    .tab-pane {
        display: none;
    }

        .tab-pane.active {
            display: block;
        }
</style>


<div class="main-content position-relative max-height-vh-100 h-100" style="margin-top:-220px">

    <div class="card shadow-lg mx-4 card-profile-bottom">
        <div class="card-body p-3">
            <div class="row gx-4">
                <div class="col-auto my-auto">
                    <div class="h-100">
                        <h5 class="mb-1">
                            <i class="fas fa-chalkboard-teacher text-info text-lg opacity-10"></i>&nbsp;&nbsp; Manage Teacher
                        </h5>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
                    <div class="tabs">
                        <div class="nav-wrapper position-relative end-0">
                            <ul class="nav nav-pills nav-fill p-1" role="tablist">
                                <li class="nav-item" data-tab-id="list-view">
                                    <a class="nav-link mb-0 px-0 py-1 active d-flex align-items-center justify-content-center" data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                                        <i class="fa fa-user"></i>
                                        <span class="ms-2">List-View</span>
                                    </a>
                                </li>
                                <li class="nav-item" data-tab-id="grid-view">
                                    <a class="nav-link mb-0 px-0 py-1 d-flex align-items-center justify-content-center" data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                                        <i class="ni ni-settings-gear-65"></i>
                                        <span class="ms-2">Grid-View</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="card shadow-lg mx-4 card-profile" id="Filter">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-2 p-1">
                    <label style="color:black">Search</label>
                    <input class="form-control form-control-alternative" type="text" id="SearchText" placeholder="Search Subject Name">
                </div>
                <div class="col-md-2 p-1">
                    <div class="form-group form-focus">
                        <label style="color:black">From Date</label>
                        <input class="form-control form-control-alternative" type="date" id="FromDate" autocomplete="off">
                    </div>
                </div>
                <div class="col-md-2 p-1">
                    <div class="form-group form-focus">
                        <label style="color:black">To Date</label>
                        <input class="form-control form-control-alternative" type="date" id="ToDate" autocomplete="off">
                    </div>
                </div>
                <div class="col-md-2 p-1">
                    <label style="color:black">Status</label>
                    <select tabindex="1" data-placeholder="Select here.." id="intActive" name="intActive" class="form-control form-control-alternative">
                        <option value="3">Select Status</option>
                        <option value="1">Active</option>
                        <option value="2">In-Active</option>
                    </select>
                </div>
                <div class="col-auto float-right ml-auto mt-4" style="float:right">
                    <button type="button" id="btnSearch" class="btn bg-gradient-info " data-bs-toggle="tooltip" data-bs-placement="top" data-container="body" data-animation="true" onclick="GetTeacherList(1)">Search</button>
                    <button type="button" class="btn bg-gradient-dark" title="Clear" onclick="ClearData(2)"> Clear</button>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content">
        <div id="list-view" class="tab-pane">
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="dataTables_length" id="DataTables_Table_0_length" style="margin-top:-18px">
                            <label style="color:white">
                                Show
                                <select id="PageSize" onchange="GetClassRoomList(1)" class="drpselect">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                                entries
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-4">
                            <div class="card-header pb-0">
                                <h6><i class="fas fa-chalkboard-teacher text-info text-sm opacity-10"></i>&nbsp;&nbsp;Teacher List</h6>
                                <div class="col-auto float-right ml-auto" style="float:right">
                                    <a href="~/Teacher/Teacher" class="btn bg-gradient-info" onclick="Clear()" style="color:white; cursor:pointer;">+ Add New</a>
                                    <a href="#" class="btn bg-gradient-secondary" onclick="Clear()" data-bs-toggle="modal" data-bs-target="#BulkTeacher">+ Import</a>
                                    <a href="#" class="btn bg-gradient-dark" onclick="ShowFilter()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Filter"><i class="fa fa-filter"></i></a>
                                    <a href="#" class="btn bg-gradient-dark" onclick="ExportTeacher()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Export to Excel"><i class="fa fa-file-excel-o" aria-hidden="true"></i></a>
                                </div>
                            </div>
                            <div class="card-body px-0 pt-0 pb-2">
                                <div class="table-responsive p-0">
                                    <div id="tblBody"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <div id="grid-view" class="tab-pane">
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="dataTables_length" id="DataTables_Table_0_length" style="margin-top:-18px">
                            <label style="color:white">
                                Show
                                <select id="PageSize" onchange="GetClassRoomList(1)" class="drpselect">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                                entries
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-4">
                            <div class="card-header pb-0">
                                <h6><i class="fas fa-chalkboard-teacher text-info text-sm opacity-10"></i>&nbsp;&nbsp;Teacher Grid</h6>
                                <div class="col-auto float-right ml-auto" style="float:right">
                                    <a href="~/Teacher/Teacher" class="btn bg-gradient-info" onclick="Clear()" style="color:white; cursor:pointer;">+ Add New</a>
                                    <a href="#" class="btn bg-gradient-secondary" onclick="Clear()" data-bs-toggle="modal" data-bs-target="#BulkTeacher">+ Import</a>
                                    <a href="#" class="btn bg-gradient-dark" onclick="ShowFilter()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Filter"><i class="fa fa-filter"></i></a>
                                    <a href="#" class="btn bg-gradient-dark" onclick="ExportTeacher()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Export to Excel"><i class="fa fa-file-excel-o" aria-hidden="true"></i></a>
                                </div>
                            </div>
                            <div class="card-body px-0 pt-0 pb-2">
                                <div>
                                    <div id="gridView"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="modal fade" id="BulkTeacher" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><span id="PopupTitle"><i class="fa fa-upload" aria-hidden="true"></i>   Import Bulk Teacher</span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" style="color:black">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="basicinput"><b>Select File</b><span class="text-danger">*</span></label>
                                    <input type="file" id="File" name="File" accept=".xlsx,.xls" class="form-control">
                                    <span id="errFile" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="basicinput"><b>Download File</b></label>
                                <a class="btn btn-link" href="~/Data/BulkTeacher/DemoBulkTeachers.xlsx" download=""><i class="fa fa-download" aria-hidden="true"></i>&nbsp;&nbsp;Sample File</a>
                            </div>
                        </div>
                        <div class="col-md-12" id="tblMsg">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" id="btnAdd" class="btn bg-gradient-info" onclick="AddBulkTeacherData()">Import</button>
                        <button type="button" class="btn bg-gradient-dark" onclick="ClearData1()">Clear</button>
                        <input type="hidden" id="hdnid" />
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="delete_Teacher" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><span id="PopupTitle">Delete Teacher</span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" style="color:black">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="text-secondary text-xs font-weight-bolder opacity-100">Are you sure want to delete this Teacher ?.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnAdd" class="btn bg-gradient-danger" onclick="deleteTeacher()">Delete</button>
                        <button type="button" class="btn bg-gradient-dark" data-bs-dismiss="modal">Cancel</button>
                        <input type="hidden" id="hdnintId" value="0" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="status" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><span id="PopupTitle">Status Confirmation</span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="text-secondary text-xs font-weight-bolder opacity-100">Are you sure want to change status?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnAdd" class="btn bg-gradient-info" onclick="UpdateStatus()">Change</button>
                        <button type="button" class="btn bg-gradient-dark" data-bs-dismiss="modal">Cancel</button>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/School/Teacher.js"></script>

