@{
    Layout = "~/Views/Shared/_Login.cshtml";
    ViewBag.Title = "ForgotPassword";
}

<div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/reset-cover.jpg'); background-position: top;">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 text-center mx-auto">
                <h1 class="text-white mb-2 mt-7">Forgot Password</h1>
                <p class="text-lead text-white">You will receive an e-mail in maximum 60 seconds</p>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card mb-md-8">
                <div class="card-header">
                    <div class="d-flex">
                        <div class="icon icon-shape bg-success shadow text-center border-radius-md">
                            <i class="ni ni-circle-08 text-white text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="mb-0">Can't log in?</h5>
                            <p class="text-sm mb-0">Restore access to your account</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form role="form">
                        <label>We will send a recovery link to</label>
                        <input type="email" class="form-control form-control-alternative" id="Email" placeholder="Enter Register Email-Id" aria-label="Email">
                        <div class="text-center">
                            <button type="button" class="btn bg-gradient-info w-100 mt-4 mb-0" onclick="ForgotPassword();"><i class="fa fa-key" aria-hidden="true" ></i>&nbsp;&nbsp;Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                    <p class="mb-4 text-sm mx-auto">
                        <a href="~/Account/Login" class="text-primary font-weight-bold">Back To Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        document.getElementById("Email").value = "";
    });
    function ForgotPassword() {
    
        var val = true;
        var Email = document.getElementById('Email').value;
        if (Email == "" || /\S/.test(Email) == false) {
            $("#errEmail").html("Please Enter Email id.");
            val = false;
        }
        if (val == false) {
            return;
        }
        ShowWait();
        var cls = {
            Email: Email
        }
        $.ajax({
            url: '/Account/ForgotPassword',
            contentType: "application/json; charset=utf-8",
            type: "POST",
            data: JSON.stringify({
                cls: cls
            }),
            success: function (data) {
                
                if (data == 'Success') {
                    toastr.success('Password sent successfully');
                    HideWait();
                }
                else if (data == 'Error' || data == null) {
                    toastr.error('Email id not registered');
                    document.getElementById('Email').value = '';
                    HideWait();
                }
            },
            error: function (xhr) {

                alert('errors');
            }
        });
    }

</script>