    <script src="~/Content/files/bower_components/i18next-browser-languagedetector/js/i18nextBrowserLanguageDetector.min.js"></script>
    <script src="~/Content/files/bower_components/jquery-i18next/js/jquery-i18next.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
    <script src="~/Content/files/assets/js/common-pages.js"></script>

    <script>
        $(document).ready(function () {
            document.getElementById("Email").value = "";
        });
        function ForgotPassword() {

            var val = true;
            var Email = document.getElementById('Email').value;
            if (Email == "" || /\S/.test(Email) == false) {
                $("#errEmail").html("Please Enter Email id.");
                val = false;
            }
            if (val == false) {
                return;
            }

            var cls = {
                Email: Email
            }
            $.ajax({
                url: '/Account/ForgotPassword',
                contentType: "application/json; charset=utf-8",
                type: "POST",
                data: JSON.stringify({
                    cls: cls
                }),
                success: function (data) {

                    if (data == 'Success') {
                        toastr.success('Password send successfully');

                    }
                    else if (data == 'Error' || data == null) {
                        toastr.error('Email id not registered');
                    }
                    document.getElementById('Email').value = '';
                },
                error: function (xhr) {

                    alert('errors');
                }
            });
        }
    </script>
</body>
