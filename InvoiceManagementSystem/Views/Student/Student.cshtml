@model InvoiceManagementSystem.Models.StudentModel
@{
    ViewBag.Title = "Student";
}
<br />
<br />
<style>
    .tab-pane {
        display: none;
    }

        .tab-pane.active {
            display: block;
        }
</style>

<div class="row" id="FilterDiv" style="margin-left:19px">
    <div class="col-sm-4 col-md-3" style="margin-top: -32px;">
        <div class="form-group form-focus">
            <label style="color:white">Search</label>
            <input type="text" class="form-control form-control-alternative" id="SearchText" placeholder="Search" maxlength="50">
        </div>
    </div>
    <div class="col-sm-4 col-md-2" style="margin-top: -32px;">
        <div class="form-group form-focus select-focus">
            <label style="color:white">Status</label>
            <select tabindex="1" data-placeholder="Select here.." id="intActive" name="intActive" class="form-control form-control-alternative">
                <option value="3">Select Status</option>
                <option value="1">Active</option>
                <option value="2">In-Active</option>
            </select>
        </div>
    </div>
    <div class="col-sm-4 col-md-2" style="margin-top: -32px;">
        <div class="form-group form-focus">
            <label style="color:white">From Date</label>
            <input class="form-control form-control-alternative" type="date" id="FromDate" autocomplete="off">
        </div>
    </div>
    <div class="col-sm-4 col-md-2" style="margin-top: -32px;">
        <div class="form-group form-focus">
            <label style="color:white">To Date</label>
            <input class="form-control form-control-alternative" type="date" id="ToDate" autocomplete="off">
        </div>
    </div>
    <div class="col-sm-6 col-md-1">

        <a class="btn bg-gradient-info" onclick="GetStudentList(1)">Search</a>
    </div>

    <div class="col-sm-6 col-md-1">
        <a class="btn bg-gradient-dark" title="Clear" onclick="ClearData(2)"> Clear </a>

    </div>
</div>
<div class="main-content position-relative max-height-vh-100 h-100" style="margin-top:-220px">

    <div class="card shadow-lg mx-4 card-profile-bottom">
        <div class="card-body p-3">
            <div class="row gx-4">
                <div class="col-auto my-auto">
                    <div class="h-100">
                        @if (Model.LSTStudentList[0].Id > 4)
                        {
                            <h5 class="mb-1">
                                <i class="fas fa-chalkboard-Student text-info text-lg opacity-10"></i>&nbsp;&nbsp; Edit Student
                            </h5>
                        }
                        else
                        {
                            <h5 class="mb-1">
                                <i class="fas fa-chalkboard-Student text-info text-lg opacity-10"></i>&nbsp;&nbsp; Add Student
                            </h5>
                        }
                    </div>
                </div>
                <div class="col-lg-8 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
                    <div class="tabs">
                        <div class="nav-wrapper position-relative end-0">
                            <ul class="nav nav-pills nav-fill p-1" role="tablist">
                                <li class="nav-item" data-tab-id="list-view">
                                    <a class="nav-link mb-0 px-0 py-1 active d-flex align-items-center justify-content-center" data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                                        <i class="fa fa-user"></i>
                                        <span class="ms-2">Basic-Details</span>
                                    </a>
                                </li>
                                <li class="nav-item" data-tab-id="grid-view">
                                    <a class="nav-link mb-0 px-0 py-1 d-flex align-items-center justify-content-center" data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                                        <i class="fa fa-user"></i>
                                        <span class="ms-2">Parent-Details</span>
                                    </a>
                                </li>
                                <li class="nav-item" data-tab-id="bank-view">
                                    <a class="nav-link mb-0 px-0 py-1 d-flex align-items-center justify-content-center" data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                                        <i class="fa fa-address-book"></i>
                                        <span class="ms-2">Address-Details</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content">
        <div id="list-view" class="tab-pane">
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card mt-4 mb-3">
                            <div class="card-body pb-0">
                                <div class="col-9">
                                    <h5 class="mb-1">
                                        <a href="javascript:;"><i class="fa fa-user"></i> Basic Details</a>
                                    </h5>
                                </div><br />
                                <div class="row">
                                    <input type="hidden" id="hdnintId" value="@Model.LSTStudentList[0].Id" />
                                    <div class="col-md-6" id="Profilediv">
                                        <div class="form-group">
                                            <div class="form-group" id="divUploadFile" style="display:block">

                                                <label for="example-text-input" class="form-control-label">
                                                    Profile
                                                </label>
                                                <span id="removeButton" onclick="removeImage()" style="color: #100f0f;margin-left: 110px;">x</span>
                                                @if (Model.LSTStudentList[0].Id > 1)
                                                {
                                                    <div>
                                                        <input type="hidden" id="HiddenfileForImage" value="@Model.LSTStudentList[0].ProfileImg" />
                                                        @*<input type="file" class="form-control form-control-alternative" name="Profile" id="Profile" accept="image/*" style="display: none;">*@
                                                        @Html.TextBoxFor(model => model.LSTStudentList[0].Profile, new { @id = "Profile", @class = "form-control form-control-alternative", @type = "file", style = "display: none;" })
                                                        @if (Model.LSTStudentList[0].ProfileImg != "" && Model.LSTStudentList[0].ProfileImg != "undefined" && Model.LSTStudentList[0].ProfileImg != null)
                                                        {
                                                            var item = Model.LSTStudentList[0];
                                                            <img src="~/Data/Profile/@item.ProfileImg" alt="Profile Image" id="ProfileImg" style="cursor: pointer;margin-left: -2px;height: 156px;width: 168px;margin-bottom: 8px;margin-top: -4px;" width="50" height="50" />
                                                        }
                                                        else
                                                        {
                                                            <img id="ProfileImg" class="gambar" @*src="~/Data/Profile/dummy.jpg"*@ alt="Profile Image" style="cursor: pointer;margin-left: -2px;height: 156px;width: 168px;margin-bottom: 8px;margin-top: -4px;" width="50" height="50" />
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div>
                                                        @Html.TextBoxFor(model => model.LSTStudentList[0].Profile, new { @id = "Profile", @class = "form-control form-control-alternative", @type = "file", style = "display: none;", onchange = "displaySelectedImage(this)" })

                                                        @if (!string.IsNullOrEmpty(Model.LSTStudentList[0].ProfileImg))
                                                        {
                                                            var item = Model.LSTStudentList[0];
                                                            <img src="~/Data/Profile/@item.ProfileImg" alt="Profile Image" id="ProfileImg" onclick="openFileInput()" style="cursor: pointer;margin-left: -2px;height: 156px;width: 168px;margin-bottom: 8px;margin-top: -4px;" width="50" height="50" /> }
                                                        else
                                                        {
                                                            <img id="ProfileImg" class="gambar" @*src="~/Data/Profile/dummy.jpg"*@ alt="Profile Image" onclick="openFileInput()" style="cursor: pointer;margin-left: -2px;height: 156px;width: 168px;margin-bottom: 8px;margin-top: -4px;" width="50" height="50" />}
                                                    </div>
                                                }
                                                <span id="errProfile" class="text-xs font-weight-bold mb-0" style="color:red"></span>

                                            </div>
                                            <div class="form-group" id="divFile" style="display:none">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Title <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.DropDownListFor(model => model.LSTStudentList[0].Title,
                                                 new List<SelectListItem>
                                                 {
                                                     new SelectListItem { Text = "Select Title", Value = "0" },
                                                     new SelectListItem { Text = "Mr.", Value = "Mr.", Selected = Model.LSTStudentList[0].Title == "Mr." },
                                                     new SelectListItem { Text = "Mrs.", Value = "Mrs.", Selected = Model.LSTStudentList[0].Title == "Mrs." },
                                                     new SelectListItem { Text = "Miss.", Value = "Miss.", Selected = Model.LSTStudentList[0].Title == "Miss." }
                                                 },
                                                 new { @id = "Title", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.DropDownListFor(model => model.LSTStudentList[0].Title,
                                                 new List<SelectListItem>
                                                 {
                                                     new SelectListItem { Text = "Select Title", Value = "0" },
                                                     new SelectListItem { Text = "Mr.", Value = "Mr." },
                                                     new SelectListItem { Text = "Mrs.", Value = "Mrs."},
                                                     new SelectListItem { Text = "Miss.", Value = "Miss."}
                                                 },
                                                 new { @id = "Title", @class = "form-control form-control-alternative" })
                                            }
                                            @*<input class="form-control form-control-alternative" type="email" id="UserName" placeholder="Enter Student Name">*@
                                            <span id="errTitle" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="example-text-input" class="form-control-label">Student Name <span class="text-danger">*</span></label>
                                                @if (Model.LSTStudentList[0].Id > 1)
                                                {
                                                    @Html.TextBoxFor(model => model.LSTStudentList[0].StudentName, new { @id = "StudentName", @placeholder = "Student Name.", @class = "form-control form-control-alternative" })
                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.StudentName, new { @id = "StudentName", @placeholder = "Student Name.", @class = "form-control form-control-alternative" })
                                                }
                                                <span id="errStudentName" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="example-text-input" class="form-control-label">Father Name <span class="text-danger">*</span></label>
                                                @if (Model.LSTStudentList[0].Id > 1)
                                                {
                                                    @Html.TextBoxFor(model => model.LSTStudentList[0].FatherName, new { @id = "FatherName", @placeholder = "Father Name.", @class = "form-control form-control-alternative" })
                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.FatherName, new { @id = "FatherName", @placeholder = "Father Name.", @class = "form-control form-control-alternative" })
                                                }
                                                <span id="errFatherName" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="example-text-input" class="form-control-label">Surname <span class="text-danger">*</span></label>
                                                @if (Model.LSTStudentList[0].Id > 1)
                                                {
                                                    @Html.TextBoxFor(model => model.LSTStudentList[0].Surname, new { @id = "Surname", @placeholder = "Surname.", @class = "form-control form-control-alternative" })
                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.Surname, new { @id = "Surname", @placeholder = "Surname.", @class = "form-control form-control-alternative" })
                                                }
                                                <span id="errSurname" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="                                                                                                                                 form-control-label">Gender <span class="text-danger">*</span></label><br />
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.DropDownListFor(model => model.LSTStudentList[0].Gender,
                                                 new List<SelectListItem>
                                                 {
                                                     new SelectListItem { Text = "Select Gender", Value = "0" },
                                                     new SelectListItem { Text = "Male", Value = "Male", Selected = Model.LSTStudentList[0].Gender == "Male" },
                                                     new SelectListItem { Text = "Female", Value = "Female", Selected = Model.LSTStudentList[0].Gender == "Female" },
                                                     new SelectListItem { Text = "Other", Value = "Other", Selected = Model.LSTStudentList[0].Gender == "Other" }
                                                 },
                                                 new { @id = "Gender", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.DropDownListFor(model => model.LSTStudentList[0].Gender,
                                                 new List<SelectListItem>
                                                 {
                                                     new SelectListItem { Text = "Select Title", Value = "0" },
                                                     new SelectListItem { Text = "Male", Value = "Male" },
                                                     new SelectListItem { Text = "Female", Value = "Female"},
                                                     new SelectListItem { Text = "Other", Value = "Other"}
                                                 },
                                                 new { @id = "Gender", @class = "form-control form-control-alternative" })
                                            }
                                            <span id="errGender" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Blood Group <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.DropDownListFor(model => model.LSTStudentList[0].BloodGroup,
                                                 new List<SelectListItem>
                                                 {
                                                     new SelectListItem { Text = "Select BloodGroup", Value = "0" },
                                                     new SelectListItem { Text = "A+",  Value = "A+",  Selected = Model.LSTStudentList[0].BloodGroup == "A+" },
                                                     new SelectListItem { Text = "A-",  Value = "A-",  Selected = Model.LSTStudentList[0].BloodGroup == "A-" },
                                                     new SelectListItem { Text = "B+",  Value = "B+",  Selected = Model.LSTStudentList[0].BloodGroup == "B+" },
                                                     new SelectListItem { Text = "B-",  Value = "B-",  Selected = Model.LSTStudentList[0].BloodGroup == "B-" },
                                                     new SelectListItem { Text = "AB+", Value = "AB+", Selected = Model.LSTStudentList[0].BloodGroup == "AB+" },
                                                     new SelectListItem { Text = "AB-", Value = "AB-", Selected = Model.LSTStudentList[0].BloodGroup == "AB-" },
                                                     new SelectListItem { Text = "O+",  Value = "O+",  Selected = Model.LSTStudentList[0].BloodGroup == "O+" },
                                                     new SelectListItem { Text = "O-",  Value = "O-",  Selected = Model.LSTStudentList[0].BloodGroup == "O-" },
                                                 },
                                                 new { @id = "BloodGroup", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.DropDownListFor(model => model.LSTStudentList[0].BloodGroup,
                                                 new List<SelectListItem>
                                                 {
                                                     new SelectListItem { Text = "Select BloodGroup", Value = "0" },
                                                     new SelectListItem { Text = "A+",  Value = "A+"},
                                                     new SelectListItem { Text = "A-",  Value = "A-"},
                                                     new SelectListItem { Text = "B+",  Value = "B+"},
                                                     new SelectListItem { Text = "B-",  Value = "B-"},
                                                     new SelectListItem { Text = "AB+", Value = "AB+"},
                                                     new SelectListItem { Text = "AB-", Value = "AB-"},
                                                     new SelectListItem { Text = "O+",  Value = "O+"},
                                                     new SelectListItem { Text = "O-",  Value = "O-"},
                                                 },
                                                 new { @id = "BloodGroup", @class = "form-control form-control-alternative" })
                                            }
                                            @*<input class="form-control form-control-alternative" type="email" id="UserName" placeholder="Enter Student Name">*@
                                            <span id="errBloodGroup" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Birth Date <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.TextBoxFor(model => model.LSTStudentList[0].Dob, new { @id = "Dob", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.Dob, new { @id = "Dob", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            @*<input class="form-control form-control-alternative floating datetimepicker" type="date" id="Dob" autocomplete="off">*@
                                            <span id="errDob" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Email <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.TextBoxFor(model => model.LSTStudentList[0].Email, new { @id = "Email", @placeholder = "example@gmail.com", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.Email, new { @id = "Email", @placeholder = "example@gmail.com", @class = "form-control form-control-alternative" })
                                            }
                                            <span id="errEmail" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4" id="Passworddiv">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label" id="labelpass">Password <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.PasswordFor(model => model.LSTStudentList[0].Password, new { @id = "Password", @placeholder = "**********", @class = "form-control form-control-alternative" })
                                            }
                                            else
                                            {
                                                @Html.PasswordFor(model => Model.Password, new { @id = "Password", @placeholder = "**********", @class = "form-control form-control-alternative" })
                                            }
                                            <span id="errPassword" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Mobile <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.TextBoxFor(model => model.LSTStudentList[0].MobileNo, new { @id = "MobileNo", @placeholder = "8487968118", @class = "form-control form-control-alternative", @maxlength = 10, @onkeypress = "return onlyNumbers(event)" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.MobileNo, new { @id = "MobileNo", @placeholder = "8487968118", @class = "form-control form-control-alternative", @maxlength = 10, @onkeypress = "return onlyNumbers(event)" })
                                            }
                                            <span id="errMobile" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Alternate Mobile</label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.TextBoxFor(model => model.LSTStudentList[0].AlternateMobileNo, new { @id = "AlternateMobileNo", @placeholder = "8487968118", @class = "form-control form-control-alternative", @maxlength = 10, @onkeypress = "return onlyNumbers(event)" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.AlternateMobileNo, new { @id = "AlternateMobileNo", @placeholder = "8487968118", @class = "form-control form-control-alternative", @maxlength = 10, @onkeypress = "return onlyNumbers(event)" })
                                            }
                                            <span id="errAlternateMobileNo" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Date Of Joining <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.TextBoxFor(model => model.LSTStudentList[0].DateOfJoining, new { @id = "DateOfJoining", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.DateOfJoining, new { @id = "DateOfJoining", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            <span id="errDateOfJoining" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4" style="display:none">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Date Of Leaving <span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                @Html.TextBoxFor(model => model.LSTStudentList[0].DateOfLeaving, new { @id = "DateOfLeaving", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            else
                                            {
                                                @Html.TextBoxFor(model => Model.DateOfLeaving, new { @id = "DateOfLeaving", @placeholder = "Dob", @class = "form-control form-control-alternative", @type = "date" })
                                            }
                                            <span id="errDateOfLeaving" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4" id="ClassRoomdiv">
                                        <div class="form-group">
                                            <label for="basicinput"><b>Assign Class</b><span class="text-danger">*</span></label>
                                            @if (Model.LSTStudentList[0].Id > 1)
                                            {
                                                <input type="hidden" id="hdnClassId" value="@Model.LSTStudentList[0].ClassId" />
                                                <select class="form-control form-control-alternative @(Model.LSTStudentList[0].Id > 1 ? "" : "form-control-alternative")" id="ClassId">
                                                    <option value="0">Select ClassRoom</option>
                                                    @foreach (var classItem in Model.LSTStudentList)
                                                    {
                                                        <option value="@classItem.ClassNo" @(classItem.ClassId == Model.LSTStudentList[0].ClassId ? "selected" : "")>@classItem.ClassNo</option>
                                                    }
                                                </select>
                                            }
                                            else
                                            {
                                                <select class="form-control form-control-alternative" id="ClassId" name="ClassId" style="width: 100%">
                                                    <option value="0">Select ClassRoom</option>
                                                    @{ if (Model != null && Model.LSTStudentList.Count > 0)
                                                        {
                                                            for (var i = 0; i < Model.LSTStudentList.Count; i++)
                                                            {
                                                                var item = Model.LSTStudentList[i];

                                                                if (item.Id == Model.ClassId)
                                                                {
                                                                    <option value="@item.ClassId" selected>@(item.ClassNo)</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.ClassId">@(item.ClassNo)</option>
                                                                }
                                                            }
                                                        } }
                                                </select>
                                            }
                                            <span id="errClassId" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Roll No<span class="text-danger">*</span></label>
