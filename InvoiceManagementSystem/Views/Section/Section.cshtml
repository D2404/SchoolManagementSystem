@{
    ViewBag.Title = "Section";
}


<div class="main-content position-relative max-height-vh-100 h-100" style="margin-top:-220px">
    <div class="card shadow-lg mx-4 card-profile-bottom">
        <div class="card-body p-3">
            <div class="row gx-4">
                <div class="col-auto my-auto">
                    <div class="h-100">
                        <h5 class="mb-1">
                            <i class="fas fa-calendar-check-o text-primary text-lg"></i>&nbsp;&nbsp;Manage Section
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="card shadow-lg mx-4 card-profile" id="Filter">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-2 p-2">
                    <label style="color:black">Search</label>
                    <input class="form-control form-control-alternative" type="text" id="SearchText" placeholder="Search Section No">
                </div>
                <div class="col-md-2 p-2">
                    <label style="color:black">Status</label>
                    <select tabindex="1" data-placeholder="Select here.." id="intActive" name="intActive" class="form-control form-control-alternative">
                        <option value="3">Select Status</option>
                        <option value="1">Active</option>
                        <option value="2">In-Active</option>
                    </select>
                </div>
                <div class="col-auto float-right ml-auto mt-4" style="float:right">
                    <button type="button" id="btnSearch" class="btn bg-gradient-info " data-bs-toggle="tooltip" data-bs-placement="top" data-container="body" data-animation="true" onclick="GetSectionList(1)">Search</button>
                    <button type="button" class="btn bg-gradient-dark" title="Clear" onclick="ClearData(2)"> Clear</button>
                </div>
            </div>

        </div>
    </div>
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="dataTables_length" id="DataTables_Table_0_length">
                    <label style="color:white">
                        Show
                        <select id="PageSize" onchange="GetSectionList(1)" class="drpselect">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        entries
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6> <i class="fa fa-home text-primary text-lg"></i>  Section List</h6>
                        <div class="col-auto float-right ml-auto" style="float:right">
                            <a class="btn bg-gradient-info" data-bs-toggle="modal" data-bs-target="#Section" onclick="Clear()" style="color:white; cursor:pointer;">+ Add New</a>
                            <a href="#" class="btn bg-gradient-dark" onclick="ShowFilter()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Filter"><i class="fa fa-filter"></i></a>
                            <a href="#" class="btn bg-gradient-dark" onclick="ExportSection()" style="border: 1px solid black;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Export to Excel"><i class="fa fa-file-excel-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <div id="tblBody"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="Section" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="PopupTitle">Add Section</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Section Name <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="SectionNo" placeholder="Enter Section" maxlength="1">
                                <span id="errSectionNo" class="text-xs font-weight-bold mb-0" style="color:red"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnAdd" class="btn bg-gradient-info btn-sm" onclick="InsertData()">Save</button>
                    <button type="button" class="btn bg-gradient-dark btn-sm" onclick="ClearData(1)"> Clear</button>
                    <input type="hidden" id="hdnintId" value="0" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="delete_Section" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="PopupTitle">Delete Section</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-secondary text-xs font-weight-bolder opacity-100">Are you sure want to delete this Section ?.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-gradient-danger btn-sm" onclick="deleteSection()">Delete</button>
                    <button type="button" class="btn bg-gradient-dark btn-sm" onclick="ClearData(1)"> Clear</button>
                    <input type="hidden" id="hdnintId" value="0" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="status" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="PopupTitle">Status Confirmation</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-secondary text-xs font-weight-bolder opacity-100">Are you sure want to change status?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-gradient-info btn-sm" onclick="UpdateStatus()">Change</button>
                    <button type="button" class="btn bg-gradient-dark btn-sm" onclick="ClearData(1)"> Clear</button>
                    <input type="hidden" id="hdnintId" value="0" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="~/Scripts/School/Section.js"></script>

