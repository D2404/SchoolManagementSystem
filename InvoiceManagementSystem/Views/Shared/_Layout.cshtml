                success: function (data) {

                    var html = "";
                    html = html + ' <option value="0" selected><b>Change AcademicYear<b></option>';
                    for (var i = 0; i < data.LSTAcademicYearList.length; i++) {
                        html = html + '<option value="' + data.LSTAcademicYearList[i].AcademicYearId + '">' + data.LSTAcademicYearList[i].AcademicYear + '</option>';
                        $("#AcademicYearId").empty();
                        $("#AcademicYearId").append(html);
                    }
                }
            });
        }


        function onAcademicYear() {

            $("#FilterDiv").hide();
            var AcademicYear = $('#AcademicYearId').val();
            ShowWait();
            $.ajax({
                type: "POST",
                url: '/Common/LoadAcademicYear?AcademicYear=' + AcademicYear,
                async: false,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#FilterDiv").hide();
                    location.reload(true);

                    var html = "";
                    html = html + ' <option value="0" selected>Select AcademicYear</option>';
                    for (var i = 0; i < data.LSTAcademicYearList.length; i++) {
                        html = html + '<option value="' + data.LSTAcademicYearList[i].AcademicYearId + '">' + data.LSTAcademicYearList[i].AcademicYear + '</option>';
                        $("#AcademicYearId").empty();
                        $("#AcademicYearId").append(html);
                        location.reload(true);
                    }
                },
                failure: function () {
                    alert("Failed!");
                }
            });
            HideWait();
        }

        function updateDateTime() {
            var now = new Date();
            var options = {
                year: 'numeric',
                month: 'long',
                day: 'numeric',

            };
            var formattedDateTime = now.toLocaleString('en-IN', options);
            $("#datetime").text(formattedDateTime);
        }


        setInterval(updateDateTime, 1000);
        function updateNotificationBadge() {
            $.ajax({
                url: '/Home/GetNotificationCount',
                type: 'GET',
                success: function (notificationCount) {

                    $('#notificationBadge').text(notificationCount);
                },
                error: function () {
                    console.log('Error occurred while retrieving the notification count.');
                }
            });
        }

        function Leavedata() {
