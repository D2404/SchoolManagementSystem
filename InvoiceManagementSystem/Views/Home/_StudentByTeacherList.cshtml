@model InvoiceManagementSystem.Models.StudentModel

<table class="table align-items-center mb-0">
    <thead>
        <tr>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">Sr No.</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">Profile</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">Full Name</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">User Name</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">Class No</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">Roll No</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7">Gender</th>
            <th class="text-uppercase text-white text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
        </tr>
    </thead>


    @if (Model != null && Model.LSTStudentList.Count > 0)
    {

    <tbody id="tblBody">

        <a href="#" class="btn bg-gradient-dark" onclick="GoBack1(@Model.LSTStudentList[0].ClassId)" title="Filter" style="margin-left: 915px;">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            Back
        </a>
        <h6 style="margin-left: 408px; color:white;margin-top:-53px">(<b>ClassRoom -</b> @Model.LSTStudentList[0].ClassNo) (<b>Teacher -</b> @Model.LSTStudentList[0].TeacherName)</h6>
        @for (var i = 0; i < Model.LSTStudentList.Count; i++)
        {

            var item = Model.LSTStudentList[i];

            <tr>
                <td>
                    <p class="text-xs font-weight-bold mb-0" style="text-align: center; color: white">@item.TotalRecord</p>
                    @*<p class="text-xs text-secondary mb-0">Organization</p>*@
                </td>
                @if (item.ProfileImg == null || item.ProfileImg == "")
                {
                    <td> <img src="~/Data/Profile/noimage.jpg" width="50" height="50" /></td>
                }
                else
                {
                    <td><img src="/Data/Profile/@item.ProfileImg" width="50" height="50"></td>
                }
                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h5 class="text-xs font-weight-bold mb-0" style="text-align: left; color: white">@item.FullName</h5>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="text-xs font-weight-bold mb-0" style="text-align: left; color: white">@item.UserName</p>
                </td>

                <td>
                    <p class="text-xs font-weight-bold mb-0" style="text-align: left; color: white">@item.ClassNo</p>

                </td>

                <td>
                    <p class="text-xs font-weight-bold mb-0" style="text-align: left; color: white">@item.RollNo</p>
                </td>

                @if (item.Gender == true)
                {
                    <td><p class="text-xs font-weight-bold mb-0" style="text-align: left; color: white">Male</p></td>

                }
                else
                {
                    <td><p class="text-xs font-weight-bold mb-0" style="text-align: left; color: white">Female</p></td>
                }
                <td>

                    <a style="margin-left: 10px; color: white " class="text-xs font-weight-bold mb-0"><i class="fa fa-dot-circle-o text-success"></i> Active</a>

                </td>


            </tr>
        }
    </tbody>
    }
    else
    {
        <tr>    
            <td colspan="7">
                <p class="text-xs font-weight-bold mb-0" style="text-align: center;color:white"><b>No Record Found</b></p>
                @*<h5 style="text-align: center;"><b>No Record Found</b></h5>*@
            </td>
        </tr>
    }
</table>
<div class="quotation-body">
    <div class="row">
        <div class="col-lg-6 paddinglr8px">
        </div>
    </div>
    <div class="col-lg-12" style="bottom: 13px;">
        <div class="dataTables_paginate paging_simple_numbers" id="datatable-default_paginate">

            @if (Model != null && Model.LSTStudentList != null && Model.LSTStudentList.Count > 0)
            {

                var start = (Model.LSTStudentList[0].PageIndex - 1) * Model.LSTStudentList[0].PageSize + 1;
                var end = Model.LSTStudentList[0].PageSize;

                if (Model.LSTStudentList[0].PageSize < Model.LSTStudentList[0].TotalRecord)
                {
                    end = Model.LSTStudentList[0].PageSize * Model.LSTStudentList[0].PageIndex;
                    if (end > Model.LSTStudentList[0].TotalRecord)
                    {
                        end = Model.LSTStudentList[0].TotalRecord;
                    }
                }
                else
                {
                    end = Model.LSTStudentList[0].TotalRecord;
                }
                <span id="spnTotalRecords" class="dataTables_info" Department="status" aria-live="polite" style="padding: 52px 27px 10px 18px; float: left; color: white;font-size:13px">Showing @start to @end of @Model.LSTStudentList[0].TotalRecord  entries</span>
            }

            <div id="divPagination">
                @if (Model.LSTStudentList != null && Model.LSTStudentList.Count > 0)
                {
                    var pager = Model.Pager;
                    if (pager != null)
                    {
                        if (pager.EndPage >= 1)
                        {
                            <ol class="pagination" style="float:right;margin-top:-15px;margin-bottom:-5px;">
                                @if (pager.CurrentPage > 1)
                                {
                                    <li class="paginate_button previous page-item">
                                        <a onclick="GetUserList(@pager.CurrentPage-1)" class="page-link" style=" cursor: pointer; font-size: 11px; margin-top: 40px;"><i class="fas fa-angle-left"></i></a>&nbsp;
                                    </li>
                                }
                                @for (var page1 = pager.StartPage; page1 <= pager.EndPage; page1++)
                                {
                                    if (@page1 == @pager.CurrentPage)
                                    {
                                        <li class="paginate_button page-item active">
                                            <a onclick="GetUserList(@page1)" style=" cursor: pointer; font-size: 11px; margin-top: 40px;" aria-controls="datatable-default" data-dt-idx="2" tabindex="0" class="page-link bg-gradient-info"><span style="color:white">@page1</span></a>&nbsp;
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="paginate_button page-item">
                                            <a onclick="GetUserList(@page1)" style=" cursor: pointer; font-size: 11px; margin-top: 40px;" class="page-link">@page1</a>&nbsp;
                                        </li>
                                    }
                                }
                                @if (pager.CurrentPage < pager.TotalPages)
                                {
                                    <li class="paginate_button page-item">
                                        <a onclick="GetUserList(@pager.CurrentPage + 1)" style=" cursor: pointer; font-size: 11px; margin-top: 40px; float: left" class="page-link"><i class="fas fa-angle-right"></i></a>
                                    </li>
                                }
                            </ol>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
<script>

    function GoBack1(ClassId) {
        
        $('#Class').hide();
        $('#Student').hide();
        $('#Teacher').show();
        ShowWait();
        $.ajax({
            url: '/Home/GetTeacherByClassRoom',
            contentType: "application/json; charset=utf-8",
            type: "POST",
            data: JSON.stringify({
                ClassId: ClassId
            }),
            success: function (data) {
                
                $('#TeacherList').empty();
                $('#TeacherList').append(data);
                HideWait();
            },
            error: function (xhr) {
                HideWait();
                alert('errors');
            }
        });
    }
</script>